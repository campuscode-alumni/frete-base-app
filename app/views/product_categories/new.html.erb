<h1>Cadastrar Nova Categoria Produto</h1>

<%= form_with(model: @product_category ) do |f| %>
  <div class="form-group">
    <%= f.label :name, 'Nome' %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.submit 'Salvar', class: "btn btn-primary" %>
  </div> 

<% end %>